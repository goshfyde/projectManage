html 
  head
    link(rel="stylesheet" type="text/css" href="../css/main.css")
    link(rel="stylesheet" type="text/css" href="../resources/font-awesome-4.5.0/css/font-awesome.min.css")
  body
    .window
      .gantt_Housing(id = 'gantt_Housing')
        .gantt_Chart(id = 'gantt_Chart')
        include ./addDependencyPopUp.jade
      .addTaskDiv
        form(id = 'addTask')
          label(id = 'taskNameAddLabel' class = 'label') Name
            input(id = 'taskName' placeholder = 'task name')
          label(id = 'durationAddLabel' class = 'label') Duration
            input(id = 'targetDuration' placeholder = 'duration')
          label(id = 'startDateAddLabel' class = 'label') Start Date
            input(id = 'startDate' placeholder = 'startDate' type = 'date')
          label(id = 'endDateAddLabel' class = 'label') Dependencies
            input(id = 'parentTaskList' placeholder = 'dependencies')
          button(id = 'submitTask') Add Task
    include ./taskEditPopUp.jade
    
  script(src = '../build/projectHome.js')
